<Page x:Class="KTK.Pages.authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:KTK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="authorization"
      Background="#1A1A1D">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ui:SimpleStackPanel
        VerticalAlignment="Center"
        Margin="50, 0, 50, 0">

            <TextBox x:Name="loginTextBox" Margin="150, 20, 150, 0" 
                ui:ControlHelper.PlaceholderText="Логин" 
                ui:ControlHelper.CornerRadius="5"
                ui:Design.RequestedTheme="Dark"
                Background="#4E4E50"
                BorderThickness="0"/>
            <PasswordBox x:Name="passwordTextBox" Margin="150, 20, 150, 0" 
                ui:ControlHelper.PlaceholderText="Пароль" 
                ui:ControlHelper.CornerRadius="5"
                Background="#4E4E50"
                BorderThickness="0"/>
            <Label Content="Забыли пароль?"
                   Margin="0,10,0,10"
                   HorizontalAlignment="Center"
                   Foreground="#696969"/>

        </ui:SimpleStackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button 
            Content="Регистрация"
            HorizontalAlignment="Center"
            Padding="80,10,80,10"
            Foreground="#696969"
            Click="GoRegistration_Click" FontFamily="Rockwell Condensed"
            />
            <Button Grid.Column="1"
            Content="Войти"
            HorizontalAlignment="Center"
            Padding="80,10,80,10"
            Foreground="White"
            Click="Authorization_Click" FontFamily="Rockwell Extra Bold"
            />
        </Grid>
    </Grid>
</Page>
