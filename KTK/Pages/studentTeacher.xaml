<Page x:Class="KTK.Pages.studentTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KTK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="studentTeacher">

    <Grid>
        <ComboBox HorizontalAlignment="Center" Width="250"/>
        <DataGrid Margin="0,50,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding TeacherName}" Width="*" />
                <DataGridTextColumn Header="Контакты" Binding="{Binding Subject}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
