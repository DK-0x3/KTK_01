<Page x:Class="KTK.Pages.teacherStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KTK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="teacherStudent">

    <Grid>
        <DataGrid x:Name="infoUserForDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" ItemsSource="{Binding Users}" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО Преподавателя" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Контакты" Binding="{Binding Email}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Page>
