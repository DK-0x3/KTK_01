<Page x:Class="KTK.Pages.mainStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KTK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainStudent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Выход" Padding="20,5,20,5" Foreground="#696969" Margin="10"/>
            <Button Grid.Column="1" HorizontalAlignment="Center"
                    Content="Расписание" Padding="20,5,20,5" 
                    Foreground="White" Click="goScheduleStudent_Click"/>
            <Button Grid.Column="2" HorizontalAlignment="Center"
                    Content="Преподаватели" Padding="20,5,20,5" 
                    Foreground="White" Click="goTeacherStudent_Click"/>
        </Grid>
        <Frame Grid.Row="1" x:Name="FrameStudent"/>
    </Grid>
</Page>
